---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionMetadata from '../components/SectionMetadata.astro';
import SectionBio from '../components/SectionBio.astro';
import SectionIdeas from '../components/SectionIdeas.astro';
import SectionStories from '../components/SectionStories.astro';
import Footer from '../components/Footer.astro';

import StatusBarLive from '../components/StatusBarLive.svelte';
import Terminal from '../components/Terminal.svelte';
import ProfileTilt from '../components/ProfileTilt.svelte';
import HeatmapInteractive from '../components/HeatmapInteractive.svelte';
import Modal from '../components/Modal.svelte';

import { SITE } from '../lib/constants';
---

<BaseLayout>
  <!-- Status Bar -->
  <div class="status-bar">
    <div><span class="inline-block w-[5px] h-[5px] bg-green-400 rounded-full animate-status-pulse"></span> CONNECTED • SF FOG</div>
    <StatusBarLive client:idle />
  </div>

  <div class="max-w-[650px] mx-auto px-6 pt-24 pb-32 relative z-10">
    <!-- HERO -->
    <div class="flex flex-col md:flex-row items-start gap-8 mb-12">
      <div class="md:w-28 flex-shrink-0">
        <ProfileTilt
          client:visible
          name={SITE.name}
          imageSrc="https://cdn.prod.website-files.com/5a1eb87c9afe1000014a4c7d/654f69764d1a59b887b2a60d_5dc5f9642427071043c21d40_Daniel%2520Kravtsov.jpeg"
          linkedinUrl={SITE.linkedin}
        />
      </div>
      <div class="flex-1 pt-2">
        <h1 class="geist-pixel text-white mb-4 flex items-center gap-3">
          {SITE.title}
          <a href={SITE.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="inline-block opacity-25 hover:opacity-60 transition-opacity">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-white"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </h1>
        <p class="text-[13px] md:text-sm font-normal text-zinc-500 max-w-[400px]" style="letter-spacing: 0.01em; line-height: 1.6;">
          {SITE.tagline}
        </p>
      </div>
    </div>

    <!-- METADATA -->
    <div class="reveal">
      <SectionMetadata />
    </div>

    <!-- BIO + HEATMAP -->
    <div class="reveal">
      <SectionBio />
    </div>
    <div class="reveal">
      <HeatmapInteractive client:visible />
    </div>

    <!-- TERMINAL -->
    <div class="reveal">
      <Terminal client:visible />
    </div>

    <!-- IDEAS -->
    <div class="reveal">
      <SectionIdeas />
    </div>

    <!-- STORIES -->
    <div class="reveal">
      <SectionStories />
    </div>

    <!-- LINKEDIN -->
    <div class="text-center mb-20 reveal">
      <a href="https://www.linkedin.com/in/danielkravtsov/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="inline-flex items-center gap-2 text-zinc-600 hover:text-pink-400 transition">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>
    </div>

    <!-- FOOTER -->
    <Footer />
  </div>

  <!-- HEATMAP TOAST -->
  <div id="heatmap-toast" class="fixed bottom-6 left-1/2 -translate-x-1/2 px-4 py-2 rounded-lg bg-zinc-900/90 border border-zinc-800 text-[11px] font-mono text-zinc-400 opacity-0 pointer-events-none transition-all duration-300 -translate-y-2 z-50 backdrop-blur-sm">
    <span class="text-pink-400 mr-1.5">●</span><span id="heatmap-toast-text"></span>
  </div>

  <!-- MODAL -->
  <Modal client:idle />

  <!-- SCROLL REVEAL -->
  <script>
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });

    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

    // Heatmap toast
    document.addEventListener('click', (e) => {
      const square = (e.target as HTMLElement).closest('.heatmap-square');
      if (!square) return;
      const messages = [
        'refined attribution model',
        'merged knowledge graph update',
        'new epistemology draft',
        'fixed cross-channel dedup',
        'added story illustrations',
        'updated AI reasoning layer',
        'shipped marketing insights',
      ];
      const msg = messages[Math.floor(Math.random() * messages.length)];
      const toast = document.getElementById('heatmap-toast')!;
      const text = document.getElementById('heatmap-toast-text')!;
      text.textContent = msg;
      toast.style.opacity = '1';
      toast.style.transform = 'translateX(-50%) translateY(0)';
      setTimeout(() => {
        toast.style.opacity = '0';
        toast.style.transform = 'translateX(-50%) translateY(-8px)';
      }, 1800);
    });
  </script>
</BaseLayout>
